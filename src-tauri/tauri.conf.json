{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Nexus Encryption",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "PORT=3020 npm run dev",
    "devPath": "http://localhost:3020",
    "beforeBuildCommand": "npm run build",
    "distDir": "../out"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "removeFile": true,
        "createDir": true
      }
    },
    "windows": [
      {
        "title": "Nexus Encryption",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/nexusencryption/nexus-encryption/releases/latest/download/latest.json"
      ],
      "pubkey": "REPLACE_WITH_PUBLIC_KEY"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self'; connect-src 'self'"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nexusencryption.app",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png",
        "icons/512x512.png",
        "icons/1024x1024.png"
      ]
    }
  }
}
